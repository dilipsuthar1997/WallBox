<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Item checked -->
    <item android:color="@color/colorRipple" android:state_checked="true" android:drawable="@drawable/navigation_drawer_indicator" />
    <!-- Item pressed -->
    <item android:color="@color/colorSecondaryLight" android:state_pressed="true" android:drawable="@drawable/navigation_drawer_indicator"/>
