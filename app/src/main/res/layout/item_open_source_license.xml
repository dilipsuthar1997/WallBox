<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/root_view"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical">

    <TextView
            android:id="@+id/tv_license_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/primaryTextColor"
            tools:text="ButterKnife"
            android:textAppearance="@style/TextAppearance.Medium.Bold"/>

    <TextView
            android:id="@+id/tv_license_owner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/secondaryTextColor"
            tools:text="Jake Wharton"
            android:textSize="16sp"/>

    <TextView
            android:id="@+id/tv_license_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/secondaryTextColor"
            tools:text="Apache License - V2.0"
            android:textSize="16sp"/>

    <View
            android:id="@+id/divider3"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

</LinearLayout>